<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Bookshelf</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.bookshelf.name %></td>
        <td><%= book.title %></td>
        <td><%= link_to 'Show', bookshelf_book_path(@bookshelf, book) %></td>
        <td><%= link_to 'Edit', edit_bookshelf_book_path(@bookshelf, book) %></td>
        <td><%= link_to 'Destroy', bookshelf_book_path(@bookshelf, book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_bookshelf_book_path(@bookshelf) %>
